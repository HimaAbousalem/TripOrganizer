<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edittext">
        <item name="android:textColor">@color/lighttxt</item>
        <item name="android:background">@drawable/rounded_et</item>
        <item name="android:layout_marginBottom">@dimen/d_20</item>
        <item name="android:drawablePadding">@dimen/d_10</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="signinup_btn">
        <item name="android:background">@drawable/rounded_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/d_18</item>
        <item name="android:padding">@dimen/d_10</item>
    </style>


    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="white_btn">
        <item name="android:background">@drawable/rounded_btn_no_clr</item>
        <item name="android:textColor">@color/darktxt</item>
        <item name="android:paddingLeft">@dimen/d_20</item>
        <item name="android:paddingRight">@dimen/d_20</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="trip_type_btn">
        <item name="android:background">@drawable/rounded_btn_no_clr</item>
        <item name="android:textColor">@color/darktxt</item>
        <item name="android:layout_marginTop">@dimen/d_20</item>
        <item name="android:layout_marginBottom">@dimen/d_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="titles_details">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/d_32</item>
        <item name="android:layout_marginEnd">@dimen/d_32</item>
        <item name="android:layout_marginTop">@dimen/d_5</item>
        <item name="android:layout_marginBottom">@dimen/d_5</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewedit_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/d_32</item>
        <item name="android:layout_marginEnd">@dimen/d_32</item>
        <item name="android:background">@drawable/rounded_btn_no_clr</item>
        <item name="android:textColor">@color/darktxt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">@dimen/d_10</item>
    </style>

    <style name="tripdetails_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/d_8</item>
        <item name="android:layout_marginStart">@dimen/d_32</item>
        <item name="android:layout_marginEnd">@dimen/d_32</item>
    </style>
    <style name="tripdetails_edittext">
        <item name="android:layout_marginStart">@dimen/d_32</item>
        <item name="android:layout_marginEnd">@dimen/d_32</item>
        <item name="android:layout_marginTop">@dimen/d_5</item>
        <item name="android:layout_marginBottom">@dimen/d_5</item>
        <item name="android:background">@drawable/rounded_card_no_clr</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
