<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d_35"/>
    <EditText
        android:id="@+id/userEmailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:drawableLeft="@drawable/ic_user_24dp"
        style="@style/edittext"
        />
    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pass"
        android:drawableLeft="@drawable/ic_lock_24dp"
        style="@style/edittext"/>
    <TextView
        android:id="@+id/forgetPasswordTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fpass"
        android:textColor="@color/colorAccent"
        android:gravity="right"
        android:layout_marginRight="@dimen/d_50"
        android:layout_marginBottom="@dimen/d_18"/>
    <Button
        android:id="@+id/signInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signin"
        style="@style/signinup_btn"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/connect"
        android:layout_marginBottom="@dimen/d_10"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/d_20"
        >
        <ImageView
            android:id="@+id/facebookImageView"
            android:src="@drawable/ic_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_18"/>
        <ImageView
            android:id="@+id/googleImageView"
            android:src="@drawable/ic_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/donthave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_10"/>
        <TextView
            android:id="@+id/signUpTv"
            android:text="@string/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>