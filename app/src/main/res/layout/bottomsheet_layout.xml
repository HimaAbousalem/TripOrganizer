<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_peekHeight="56dp"
    app:behavior_hideable="false"
    android:maxHeight="280dp"
    android:minHeight="200dp"
    android:layout_marginBottom="100dp"
    android:fitsSystemWindows="true"
    app:layout_collapseMode="parallax"
    android:scaleType="centerCrop"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/bottomSheetTripNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_8"
        android:gravity="center"
        android:text="Trip To Mansoura"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomSheetTripSourceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="From : Cairo "
        android:textColor="@color/bottom_nav_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/bottomSheetTripNameTV"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetTripNameTV" />

    <TextView
        android:id="@+id/bottomSheetTripDestinationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="To: Mansoura "
        android:textColor="@color/bottom_nav_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/bottomSheetTripSourceTV"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetTripSourceTV" />

    <TextView
        android:id="@+id/bottomSheetTripDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="22/2/2020"
        android:textColor="@color/bottom_nav_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bottomSheetTripDestinationTV"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetTripDestinationTV" />

    <TextView
        android:id="@+id/bottomSheetTripTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="22:00"
        android:textColor="@color/bottom_nav_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bottomSheetTripDateTV"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetTripDateTV" />

</androidx.constraintlayout.widget.ConstraintLayout>